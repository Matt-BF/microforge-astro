  referrerPolicy="no-referrer"
/>

<div
  class="bg-teal-900 text-white mt-auto grid md:grid-cols-2 py-8 md:pl-20 lg:pl-auto gap-3"
>
  <div class="flex flex-col gap-10 mx-auto items-start">
    <div class="flex items-center gap-4">
      <i class="fa-sharp fa-solid fa-location-dot p-2 rounded-full bg-teal-500"
      ></i>
      <p>
        Av Prefeito José Lozano Araújo 1136B
        <br />Jardim Ypê, Paulínia, Sp, CEP 13140-558
      </p>
    </div>
    <div class="flex items-center gap-4">
      <i class="fa-brands fa-whatsapp p-2 rounded-full bg-teal-500"></i>
      <p>(19) 99945-3544</p>
    </div>
    <div class="flex items-center gap-4">
      <i class="fa-solid fa-phone p-2 rounded-full bg-teal-500"></i>
      <p>(19) 3844-3051</p>
    </div>
    <div class="flex gap-2 mt-5 md:mt-0">
      <a href="https://www.facebook.com/100068091380187/" target="_blank"
        ><i
          class="fa-brands fa-facebook bg-teal-700 rounded-full text-white text-2xl p-2 hover:opacity-80"
        ></i>
      </a>
      <a href="https://www.instagram.com/micro.forge/" target="_blank"
        ><i
          class="fa-brands fa-instagram bg-teal-700 rounded-full text-white text-2xl p-2 hover:opacity-80"
        ></i>
      </a>
      <a href="https://www.linkedin.com/company/microforge/" target="_blank"
        ><i
          class="fa-brands fa-linkedin bg-teal-700 rounded-full text-white text-2xl p-2 hover:opacity-80"
        ></i>
      </a>
      <a href="mailto:comercial@micro-forge.com" target="_blank"
        ><i
          class="fa-solid fa-envelope bg-teal-700 rounded-full text-white text-2xl p-2 hover:opacity-80"
        ></i>
      </a>
    </div>
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1192.6309798910177!2d-47.1564439403725!3d-22.78109793525346!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94c8bf1b5d51237f%3A0xf8e221e5543ac1d!2sMicro%20Forge%20Ind%C3%BAstria%20e%20Com%C3%A9rcio%20de%20Reagentes%20Ltda!5e0!3m2!1sen!2sbr!4v1672754099549!5m2!1sen!2sbr"
      class="border-none mx-auto"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  <div class="flex flex-col gap-2 mt-5 md:mt-0 ml-10">
    <h2 class="text-lg">Páginas</h2>
    <a
      class="border-b-2 border-b-transparent hover:border-b-teal-900"
      href="/sobre">sobre</a
    >
    <a
      class="border-b-2 border-b-transparent hover:border-b-teal-900"
      href="/produtos">produtos</a
    >
