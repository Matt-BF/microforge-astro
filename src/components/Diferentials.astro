---
import dif1 from "../images/dif1.webp";
import dif2 from "../images/dif2.webp";
import dif3 from "../images/dif3.webp";
import dif4 from "../images/dif4.webp";
import dif5 from "../images/dif5.webp";
import dif6 from "../images/dif6.webp";

const diferentials = [
  {
    title: "Valores competitivos",
    color: "bg-teal-800",
    img: dif1,
  },
  {
    title: "Entrega ágil para todo o Brasil",
    color: "bg-teal-700",
    img: dif2,
  },
  {
    title: "Customizável para sua rotina",
    color: "bg-teal-900",
    img: dif3,
  },
  {
    title: "P&D para suas demandas",
    color: "bg-slate-400",
    img: dif4,
  },
  {
    title: "Assessoria para implementação",
    color: "bg-green-500",
    img: dif5,
  },
  {
    title: "Suporte técnico acessível",
    color: "bg-amber-500",
    img: dif6,
  },
];
---

<h2 class="mb-10 mt-10 text-center text-3xl font-bold text-teal-900">
  Nossos diferenciais
</h2>
<div
  class="md: mx-10 mb-5 grid items-center justify-center gap-3 md:grid-cols-2 lg:mx-48 lg:grid-cols-3"
>
  {
    diferentials.map((diferential, idx) => (
      <div
        class={`mb-4 flex flex-col items-center justify-center rounded-lg p-2 ${diferential.color}`}
      >
        <img src={diferential.img.src} class="h-16 w-16" />

        <h3 class="mb-4 text-center text-xl font-bold text-white">
          {diferential.title}
        </h3>
      </div>
    ))
  }
</div>
