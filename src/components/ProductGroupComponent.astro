---
import ProductShowcase from "./ProductShowcase.astro";

const {
  productGroupSlug,
  productGroupTitle,
  productGroupsubTitle,
  productGroupDescriptionExcerpt,
  sectionColor,
  products,
} = Astro.props;
---

<div class="mt-20" id={`${productGroupSlug}-section`}>
  <h2
    class={`md:w-1/2 p-1 rounded-2xl mb-3 ${sectionColor} text-2xl text-white md:text-left text-center`}
  >
    {productGroupTitle}
  </h2>
  <h3 class="text-lg font-bold text-teal-900">
    {productGroupsubTitle}
  </h3>
  <div
    class="prose mb-10 prose-p:text-justify"
    set:html={`${productGroupDescriptionExcerpt}...<a class='text-teal-900 hover:text-teal-800' href='/produtos/${productGroupSlug}'>saiba mais</a>`}
  />
  <ProductShowcase products={products} productGroupSlug="linha-sabia" />
</div>
